
<div class="well">
<h1>Members in <%= current_group.groupname %></h1>
<p><a href="/groups/add_user">Click here to add another roommate!</a></p>
<font color='red'><%= link_to 'Leave this group', "/groups/leave", :method => :post %></font>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th style="width: 36px;"></th>
        </tr>
      </thead>
      <tbody>
      
       <!-- List Members --> 
      <% @group_members.each do |user| %>
        <tr>
        <td>
  <% if user.name %>
  	<%= mail_to user.email, user.name%>
  <% else %>
  	<i><%= mail_to user.email, user.email%> (pending)</i>
  <% end %></td>
            <td>
              <a href=""><i class="icon-pencil"></i></a>
              <a href="" role="button" data-toggle="modal"><i class="icon-remove"></i></a>
          </td>
        </tr>
<% end %>


        
      </tbody>
    </table>
</div>

<div class="pagination">
    <ul>
        <li><a href="#">Prev</a></li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">Next</a></li>
    </ul>
</div>
<div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Delete Confirmation</h3>
    </div>
    <div class="modal-body">
        <p class="error-text">Are you sure you want to delete the user?</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button class="btn btn-danger" data-dismiss="modal">Delete</button>
    </div>
</div>
