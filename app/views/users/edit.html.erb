<% content_for :title do "Account Settings" end %>
<% if current_user %>
<div class="container">
  <div class="row-fluid">
    <div class="span4 offset4 well">
    <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
        <h1 align="center">Whoops...</h1>
        <div class="error_messages">
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
          </div>
          <% else %>
        <h1 align="center">Edit Information</h1>
        <% end %>
        <br>
        <div class="field"> 
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: :email, class: 'input-block-level'%> 
        </div>
        <div class="field"> 
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: :name, class: 'input-block-level' %>
        </div>
        <div class="field"> 
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: 'New Password', class: 'input-block-level'%>
        </div>
        <div class="field"> 
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, placeholder: 'Retype New Password', class: 'input-block-level'%>
        </div>
        <div class="actions"><%= f.submit(:class => 'btn btn-info btn-block', :value => 'Save Changes') %></div>
    <% end %>
  </div>
</div>
</div>
<% end %>
