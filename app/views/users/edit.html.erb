<% if current_user %>
<% content_for :title do "Edit Information" end %>
<div class="span4 offset4"> 
  <div class="hero-unit">
    <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
        <h1 align="center">Whoops...</h1>
        <div class="error_messages">
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
          </div>
          <% else %>
        <h1 align="center">Edit Information</h1>
        <% end %>
        <br>
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: :email, class: 'input-block-level'%> 
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: :name, class: 'input-block-level' %>
          <%= f.label :password %>
          <%= f.password_field :password, class: 'input-block-level'%>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, placeholder: 'Retype Password', class: 'input-block-level'%>
        <div class="actions"><%= f.submit(:class => 'btn btn-info btn-block', :value => 'Save Changes') %></div>
    <% end %>
  </div>
</div>

<% end %>
