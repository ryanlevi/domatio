<% content_for :title do "Contact Us" end %> 
<div class="span4 offset4 well" style="font-size: 120%; padding:20px">
  <h1 align="center" style="font-size: 36px">Contact Us</h1>
  <p><br>
    <form action="/home/contact_post" method="post">
    <div class="field">
      <input id="email" class="span12" name="email" placeholder="Your Email" type="text" value="<%= current_user.email if current_user %>" />
    </div>
    <div class="field">
      <input id="subject" class="span12" name="subject" placeholder="Subject" type="text" value="" />
    </div>
    <div class="field">
      <textarea id="message" class="span12" style="height: 140px" name="message" placeholder="Message" ></textarea>
    </div>
        <div class="actions"><input class="btn btn-primary" name="commit" type="submit" value="Send" /></div>
    </form>
    <script type="text/javascript">
    var colors = ["Complaint", "Bug", "Feature Suggestion", "Help", "Site breaking"];

      $('#subject').typeahead({source: colors});
    </script>
  </p>
</div>