<% if current_group %>  <!--Checks if the current_user is in a group, if he/she is do not allow them to create a group -->
  <h1>You already have a group!</h1>
<% else %>
  <h1>Create a Group</h1>

  <%= form_for @group, url: {action: "create"} do |f| %>  <!-- links the form to group and ensures the action goes to create and not index -->
    <% if @group.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @group.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
     <div class="field">
      <%= f.label :groupname, "Group Name" %>  <!--A single field for a groupname -->
      <%= f.text_field :groupname %>
    <div> 

    <div class="actions"><%= f.submit(:class => 'btn btn-primary', :value => 'Create Group') %></div>
  <% end %>
<% end %>