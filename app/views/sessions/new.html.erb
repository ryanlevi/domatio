<% if current_user %>
  <h1>You are already logged in!</h1>
<% else %>
  <h1>Log in</h1>

  Or <a href="/users/new">Sign up!</a><br>
  <br>
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <p><%= link_to "Forgot password?", new_password_reset_path %></p>
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me, "Remember me", :class => "checkbox inline" %>
    <p>
  </div>
    <div class="actions"><%= submit_tag("Log in", :class => 'btn btn-primary') %></div>
  <% end %>
<% end %>