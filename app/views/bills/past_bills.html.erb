<% content_for :title do "Past Bills in #{current_group.groupname}" end %> 
<div class="hero-unit" style="font-size: 120%; padding:20px">
  <center>
  <h1 style="font-size: 36px">Past bills in <%= current_group.groupname %></h1>
  <p>The following inactive bills were once in your group:</p>
  <p></center>
  <div class="row-fluid">
    <div class="span6">
  <% if @your_past_bills.length > 0 %>
    <h4><b>Bills you own:</b></h4>
    <% @your_past_bill_list_of_hashes.each do |bill_id, info| %>
      <b><%= Bill.find(bill_id).name %>:
      <%= link_to 'x', "/bills/#{bill_id}", :method => :delete, 'data-toggle'=>"tooltip", 'data-placement'=>"right", 'data-original-title'=>"Delete this bill", :id =>"x_#{bill_id}" %>
      <%= link_to 'undo', "/bills/unstash/#{bill_id}", :method => :put, 'data-toggle'=>"tooltip", 'data-placement'=>"right", 'data-original-title'=>"Delete this bill", :id =>"x_#{bill_id}" %>
    </b><br>
  <script type="text/javascript">
    $("<%= '#x_'+bill_id.to_s %>").tooltip();
  </script>
      <% info.each do |email, amount| %>
        <% if User.find_by_email(email) == current_user %>
        You owe <%= number_to_currency(amount) %> due on <%= Bill.find(bill_id).duedate.strftime("%m/%d/%Y") %>
        <% else %>
        <%= User.find_by_email(email).name %> owes <%= number_to_currency(amount) %> due on <%= Bill.find(bill_id).duedate.strftime("%m/%d/%Y") %>
        <% end %>
        <br>
      <% end %>
    <% end %>
  <% end %>
  </p><p><a href="/bills/new">Click here to add another bill!</a></p>
  </div>
    <div class="span6">
  <% if @their_past_bills.length > 0 %>
    <h4><b>Bills you don't own:</b></h4>
    <% @their_past_bill_list_of_hashes.each do |bill_id, info| %>
      <%= Bill.find(bill_id).name %>: <%= number_to_currency(info[current_user.email]) %> (of <%= number_to_currency(Bill.find(bill_id).price) %>) due on <%= Bill.find(bill_id).duedate.strftime("%m/%d/%Y")  %><br>
    <% end %>
  <% end %>
  </div>
</div>