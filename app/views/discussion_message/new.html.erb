<div class="page-header">
  <h1>Create a Reply</h1>
</div>

<%= form_for :discussion_message, :url => url_for(:controller => 'discussion_message', :action => 'create') do |f| %>
  <% if @discussion_message.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @discussion_message.errors.full_messages %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
      <div class="actions"><%= f.submit(:class => 'btn btn-primary', :value => 'Create') %></div>
<% end %>