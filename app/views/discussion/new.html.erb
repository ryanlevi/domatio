<% content_for :title do "Create a Discussion" end %>
<div class="hero-unit" style="padding:30px">
  <div class="page-header">
    <h1 style="font-size:36px">Create a Discussion</h1>
  </div>

  <%= form_for :discussion, :url => url_for(:controller => 'discussion', :action => 'create') do |f| %>
    <% if @discussion.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @discussion.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
        <div class="actions"><%= f.submit(:class => 'btn btn-primary', :value => 'Create') %></div>
  <% end %>
</div>